<%= form_with(model: usuario, local: true) do |form| %>
  <% if usuario.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(usuario.errors.count, "error") %> prohibited this usuario from being saved:</h2>

      <ul>
      <% usuario.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
  <div class="row">
    <div class="col-md-12">
      <div class="input">
        <div id="capture" class="capture">
          <div class="logo">
            <!-- <img width="130" src="http://image.ibb.co/gjQ1j7/Logo_Mutual.png" alt="logo mutual"> -->
            <%= image_tag  "logo.png" %>
          </div>
          <div class="contenido">
            <%= form.text_field :nombre, id: :usuario_nombre, placeholder: "Tu nombre y apellido", class: "input-form data-nombre" %>
            <%= form.text_field :cargo, id: :usuario_cargo, placeholder: "Tu cargo", class: "input-form data-cargo" %>
            <%= form.text_field :telefono, id: :usuario_telefono, placeholder: "Tu teléfono", class: "input-form data-numero" %>
            <%= form.text_field :direccion, id: :usuario_direccion, placeholder: "Dirección de Oficina", class: "input-form data-direccion" %>
            <a class="url" style="vertical-align:top;color:#005cb9;text-decoration:none;" href="http://www.mutualdeseguros.cl" title="visitanos" target="_blank">www.mutualdeseguros.cl</a>
          </div>
          <div class="somos">
            <img src="http://image.ibb.co/caWDxS/Logo_Somos_Mutual.png">
          </div>
        </div>
      </div>
    </div>
  </div>
  <div class="form-group">
    <%= form.label :rut %>
    <%= form.text_field :rut, id: :usuario_rut, placeholder: "12345678-9", class: "form-control" %>
  </div>

  <div class="form-group">
    <%= form.label :email %>
    <%= form.text_field :email, id: :usuario_email, placeholder: "ejemplo@ejemplo.cl", class: "form-control" %>
  </div>
  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>
