<p id="notice"><%= notice %></p>

<div class="container row justify-content-md-center item">
  <div class="col-md-6">
    <div class="input">
      <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
      <table width="650" id="capture">
        <tbody>
          <tr>
            <td valign="middle" width="130">
              <img width="130" src="http://image.ibb.co/gjQ1j7/Logo_Mutual.png" alt="logo mutual">
            </td>
            <td valign="middle" width="20"></td>
            <td valign="middle" width="250">
              <p>
                <strong class="data-nombre" style="font-size:15px;color:#333333;font-weight:600;"><%= @usuario.nombre %></strong><br>
                <span class="data-cargo" style="font-size:13px;color:#203747;"><%= @usuario.cargo %></span><br>
                <small class="data-numero" style="font-size:15px;color:#0066cc"><%= @usuario.telefono %></small><br>
                <small class="data-direccion" style="font-size:14px;color:#7a828d"><%= @usuario.direccion %></small><br>
                <a class="url" style="vertical-align:top;color:#005cb9;text-decoration:none;" href="http://www.mutualdeseguros.cl" title="visitanos" target="_blank">www.mutualdeseguros.cl</a>
              </p>
            </td>
            <td valign="middle" width="1"><img src="https://image.ibb.co/jxYygG/skitched_20171001_202657.jpg" height="150px" /></td>
            <td valign="middle" width="180">
              <img width="230" src="http://image.ibb.co/caWDxS/Logo_Somos_Mutual.png">
            </td>

          </tr>
        </tbody>
      </table>
    </div>
  </div>
  <div class="botonera">
    <%= link_to usuarios_path, class: "volver" do %>
      <i class="material-icons">keyboard_arrow_left</i>
    <% end %>
    <%= link_to edit_usuario_path(@usuario), class: "edit" do %>
      <i class="material-icons">mode_edit</i>
    <% end %>
  </div>
</div>
<div class="container row justify-content-md-center item">
  <div class="col-md-6">
    <button class="btn btn-primary" type="button" data-toggle="collapse" data-target="#collapseExample" aria-expanded="false" aria-controls="collapseExample">
      Codigo en html
    </button>
    <button class="capturar btn btn-primary">
      capturar
    </button>
  </div>

  <div id="collapseExample" class="collapse">
    <br>
    <pre><code class="html output"></code></pre>
  </div>
</div>
<br>
<br>
<div class="container">
  <div class="row justify-content-md-center">
    <div class="col-md-6">
      <a id="img-val" href="" download="<%= @usuario.rut %>">
      </a>
    </div>
  </div>
</div>

<script type="text/javascript" async>
  Turbolinks.clearCache();
  function clearPage(){
    var container = $('.input');
    //console.log(container[0].innerHTML);
    str = container[0].innerHTML;
    //parse = $.parseHTML( str );
    $('.output').text(str);
  }
  clearPage();

  $('.capturar').on('click', function(){
    html2canvas(document.querySelector("#capture"),{
      useCORS: true,
    }).then(canvas => {
      //console.log(canvas)
      //console.log(canvas.toDataURL())
      //document.querySelector("#canvas").appendChild(canvas);
      var img = canvas.toDataURL("image/jpg", 1.0);
      var image = new Image()
      image.src = img
      image.width = 650;
      image.height = 152;
      $('#img-val').html(image)
      $('#img-val').attr("href", img)
    });
  })
</script>
